---
jobs:
- name: html-lint-cv
  public: true
  serial: true
  plan:
  - get: CVrepo
    trigger: true
  - task: html-lint
    file: CVrepo/ci/pipelines/html-lint.yml
  - task: deploy
    file: CVrepo/ci/pipelines/deploy.yml

resources:
- name: CVrepo
  type: git
  source:
    uri: https://github.com/PhilipHarries/CV.git
    branch: master
